</enhanced-accordion-{{ ai_gen_id }}><script>
  (function() {
    class EnhancedAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.allowMultiple = {{ block.settings.allow_multiple_open | json }};
        this.openFirst = {{ block.settings.open_first_item | json }};}

      connectedCallback() {
        this.setupEventListeners();
        if (this.openFirst) {
          this.openFirstItem();
        }
      }

      setupEventListeners() {
        const triggers = this.querySelectorAll('[data-accordion-trigger]');
        triggers.forEach(trigger => {
          trigger.addEventListener('click', (e) => {
            const itemId = trigger.getAttribute('data-accordion-trigger');
            this.toggleItem(itemId);
          });

          trigger.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              const itemId = trigger.getAttribute('data-accordion-trigger');
              this.toggleItem(itemId);
            }
          });

          trigger.setAttribute('tabindex', '0');trigger.setAttribute('role', 'button');trigger.setAttribute('aria-expanded', 'false');});
      }

      toggleItem(itemId) {
        const item = this.querySelector(`[data-accordion-item="${itemId}"]`);
        const trigger = this.querySelector(`[data-accordion-trigger="${itemId}"]`);
        const content = this.querySelector(`[data-accordion-content="${itemId}"]`);
        
        if (!item || !trigger || !content) return;

        const isActive = item.classList.contains('active');

        if (!this.allowMultiple && !isActive) {
          this.closeAllItems();
        }

        if (isActive) {
          this.closeItem(item, trigger, content);
        } else {
          this.openItem(item, trigger, content);
        }
      }

      openItem(item, trigger, content) {
        item.classList.add('active');
        trigger.setAttribute('aria-expanded', 'true');
        content.style.maxHeight = content.scrollHeight + 'px';
      }

      closeItem(item, trigger, content) {
        item.classList.remove('active');
        trigger.setAttribute('aria-expanded', 'false');
        content.style.maxHeight = '0px';
      }

      closeAllItems() {
        const activeItems = this.querySelectorAll('.ai-accordion-item-{{ ai_gen_id }}.active');
        activeItems.forEach(item => {
          const itemId = item.getAttribute('data-accordion-item');
          const trigger = this.querySelector(`[data-accordion-trigger="${itemId}"]`);
          const content = this.querySelector(`[data-accordion-content="${itemId}"]`);
          this.closeItem(item, trigger, content);
        });
      }

      openFirstItem() {
        const firstTrigger = this.querySelector('[data-accordion-trigger="1"]');
        if (firstTrigger) {
          this.toggleItem('1');
        }
      }
    }

    customElements.define('enhanced-accordion-{{ ai_gen_id }}', EnhancedAccordion{{ ai_gen_id }});
  })();
</script>

