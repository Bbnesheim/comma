</div><script>
  (function() {
    class EnhancedAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.accordionItems = this.querySelectorAll('.ai-accordion-item-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.accordionItems.forEach((item) => {
          const header = item.querySelector('.ai-accordion-item-header-{{ ai_gen_id }}');
          const content = item.querySelector('.ai-accordion-content-{{ ai_gen_id }}');
          header.addEventListener('click', () => {
            this.toggleItem(item, header, content);
          });
        });
      }

      toggleItem(item, header, content) {
        const isActive = item.classList.contains('active');
        if (isActive) {
          this.closeItem(item, header, content);
        } else {
          {% if block.settings.allow_multiple_open == false %}
            this.accordionItems.forEach((otherItem) => {
              if (otherItem !== item && otherItem.classList.contains('active')) {
                const otherHeader = otherItem.querySelector('.ai-accordion-item-header-{{ ai_gen_id }}');
                const otherContent = otherItem.querySelector('.ai-accordion-content-{{ ai_gen_id }}');
                this.closeItem(otherItem, otherHeader, otherContent);
              }
            });
          {% endif %}
          
          this.openItem(item, header, content);
        }
      }

      openItem(item, header, content) {
        item.classList.add('active');
        header.setAttribute('aria-expanded', 'true');
        
        const contentInner = content.querySelector('.ai-accordion-content-inner-{{ ai_gen_id }}');
        const contentHeight = contentInner.scrollHeight;
        content.style.maxHeight = contentHeight + 'px';
      }

      closeItem(item, header, content) {
        item.classList.remove('active');
        header.setAttribute('aria-expanded', 'false');
        content.style.maxHeight = '0px';
      }
    }

    customElements.define('enhanced-accordion-{{ ai_gen_id }}', EnhancedAccordion{{ ai_gen_id }});
  })();
</script>

