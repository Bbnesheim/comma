<script>
(function() {
  class BoatInspectionServices{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.setupToggleButtons();
    }

    setupToggleButtons() {
      const toggleButtons = this.querySelectorAll('.ai-boat-inspection-toggle-button-{{ ai_gen_id }}');
      
      toggleButtons.forEach(button => {
        button.addEventListener('click', () => {
          const itemsContainer = button.closest('.ai-boat-inspection-service-items-{{ ai_gen_id }}');
          const showText = button.querySelector('.show-text');
          const hideText = button.querySelector('.hide-text');
          
          itemsContainer.classList.toggle('expanded');
          
          if (itemsContainer.classList.contains('expanded')) {
            showText.style.display = 'none';
            hideText.style.display = 'inline';
          } else {
            showText.style.display = 'inline';
            hideText.style.display = 'none';
          }
        });
      });
    }
  }

  customElements.define('boat-inspection-services-{{ ai_gen_id }}', BoatInspectionServices{{ ai_gen_id }});
})();
</script>

