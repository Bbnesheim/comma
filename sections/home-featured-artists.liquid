{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="home-featured-artists color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="home-featured-artists__inner page-width">
    <div class="home-featured-artists__header">
      {%- if section.settings.heading != blank -%}
        <h2 class="home-featured-artists__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.view_all_label != blank -%}
        <a
          {% if section.settings.view_all_link == blank %}
            role="link" aria-disabled="true"
          {% else %}
            href="{{ section.settings.view_all_link }}"
          {% endif %}
          class="home-featured-artists__view-all"
        >
          {{ section.settings.view_all_label | escape }}
        </a>
      {%- endif -%}
    </div>
    <div class="home-featured-artists__carousel">
      <div class="home-featured-artists__track">
        {%- for block in section.blocks -%}
          <article class="home-featured-artists__card" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              <div class="home-featured-artists__image">
                {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy' }}
              </div>
            {%- endif -%}
            <div class="home-featured-artists__content">
              {%- if block.settings.name != blank -%}
                <h3 class="home-featured-artists__name">{{ block.settings.name }}</h3>
              {%- endif -%}
              {%- if block.settings.subtitle != blank -%}
                <p class="home-featured-artists__subtitle">{{ block.settings.subtitle }}</p>
              {%- endif -%}
              {%- if block.settings.link_label != blank -%}
                <a
                  {% if block.settings.link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.link }}"
                  {% endif %}
                  class="home-featured-artists__link"
                >
                  {{ block.settings.link_label | escape }}
                </a>
              {%- endif -%}
            </div>
          </article>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "COMMA – Featured artists carousel",
  "tag": "section",
  "class": "section section--home-featured-artists",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Featured artists" },
    { "type": "text", "id": "view_all_label", "label": "View-all label", "default": "View all artists" },
    { "type": "url", "id": "view_all_link", "label": "View-all link" },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 40 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 40 }
  ],
  "blocks": [
    {
      "type": "artist",
      "name": "Artist card",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Artist image" },
        { "type": "text", "id": "name", "label": "Artist name", "default": "Artist name" },
        { "type": "text", "id": "subtitle", "label": "Short descriptor", "default": "Artist descriptor" },
        { "type": "text", "id": "link_label", "label": "Link label", "default": "View artist" },
        { "type": "url", "id": "link", "label": "Artist link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "COMMA – Featured artists carousel",
      "blocks": [
        { "type": "artist" },
        { "type": "artist" },
        { "type": "artist" }
      ]
    }
  ]
}
{% endschema %}
