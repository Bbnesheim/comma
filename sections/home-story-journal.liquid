{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="home-story-journal color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="home-story-journal__inner page-width">
    <div class="home-story-journal__story">
      {%- if section.settings.story_heading != blank -%}
        <h2 class="home-story-journal__heading">{{ section.settings.story_heading }}</h2>
      {%- endif -%}
      {%- if section.settings.story_body != blank -%}
        <div class="home-story-journal__body rte">{{ section.settings.story_body }}</div>
      {%- endif -%}
      {%- if section.settings.story_link_label != blank -%}
        <a
          {% if section.settings.story_link == blank %}
            role="link" aria-disabled="true"
          {% else %}
            href="{{ section.settings.story_link }}"
          {% endif %}
          class="home-story-journal__link"
        >
          {{ section.settings.story_link_label | escape }}
        </a>
      {%- endif -%}
    </div>
    <div class="home-story-journal__journal">
      {%- if section.settings.journal_heading != blank -%}
        <h3 class="home-story-journal__journal-heading">{{ section.settings.journal_heading }}</h3>
      {%- endif -%}
      <div class="home-story-journal__journal-list">
        {%- for block in section.blocks -%}
          <article class="home-story-journal__journal-card" {{ block.shopify_attributes }}>
            {%- if block.settings.tag != blank -%}
              <p class="home-story-journal__journal-tag">{{ block.settings.tag }}</p>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
              <h4 class="home-story-journal__journal-title">{{ block.settings.title }}</h4>
            {%- endif -%}
            {%- if block.settings.excerpt != blank -%}
              <p class="home-story-journal__journal-excerpt">{{ block.settings.excerpt }}</p>
            {%- endif -%}
            {%- if block.settings.date_label != blank -%}
              <p class="home-story-journal__journal-date">{{ block.settings.date_label }}</p>
            {%- endif -%}
            {%- if block.settings.link_label != blank -%}
              <a
                {% if block.settings.link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ block.settings.link }}"
                {% endif %}
                class="home-story-journal__journal-link"
              >
                {{ block.settings.link_label | escape }}
              </a>
            {%- endif -%}
          </article>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "COMMA – Story + journal teaser",
  "tag": "section",
  "class": "section section--home-story-journal",
  "settings": [
    { "type": "text", "id": "story_heading", "label": "Story heading", "default": "About COMMA." },
    { "type": "richtext", "id": "story_body", "label": "Story body", "default": "<p>Short label story copy.<\/p>" },
    { "type": "text", "id": "story_link_label", "label": "Story link label", "default": "Read the full story" },
    { "type": "url", "id": "story_link", "label": "Story link" },
    { "type": "text", "id": "journal_heading", "label": "Journal heading", "default": "From the journal" },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 40 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 40 }
  ],
  "blocks": [
    {
      "type": "post",
      "name": "Journal card",
      "settings": [
        { "type": "text", "id": "tag", "label": "Category label", "default": "Journal" },
        { "type": "text", "id": "title", "label": "Post title", "default": "Post title" },
        { "type": "text", "id": "excerpt", "label": "Short excerpt", "default": "Short excerpt copy" },
        { "type": "text", "id": "date_label", "label": "Date label", "default": "2025-01-01" },
        { "type": "text", "id": "link_label", "label": "Link label", "default": "Read" },
        { "type": "url", "id": "link", "label": "Post link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "COMMA – Story + journal teaser",
      "blocks": [
        { "type": "post" },
        { "type": "post" }
      ]
    }
  ]
}
{% endschema %}
