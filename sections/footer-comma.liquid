{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer-comma color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="footer-comma__inner page-width">
    <div class="footer-comma__top">
      <div class="footer-comma__brand">
        {%- if section.settings.logo_text != blank -%}
          <div class="footer-comma__logo">{{ section.settings.logo_text }}</div>
        {%- endif -%}
        {%- if section.settings.brand_copy != blank -%}
          <p class="footer-comma__copy">{{ section.settings.brand_copy }}</p>
        {%- endif -%}
      </div>
      <div class="footer-comma__columns">
        <div class="footer-comma__column">
          {%- if section.settings.nav_heading != blank -%}
            <h3 class="footer-comma__heading">{{ section.settings.nav_heading }}</h3>
          {%- endif -%}
          <ul class="footer-comma__list">
            {%- for block in section.blocks -%}
              {%- if block.type == 'nav_link' -%}
                <li class="footer-comma__item" {{ block.shopify_attributes }}>
                  <a
                    {% if block.settings.link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.link }}"
                    {% endif %}
                  >
                    {{ block.settings.label | escape }}
                  </a>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        </div>
        <div class="footer-comma__column">
          {%- if section.settings.contact_heading != blank -%}
            <h3 class="footer-comma__heading">{{ section.settings.contact_heading }}</h3>
          {%- endif -%}
          <div class="footer-comma__contact rte">{{ section.settings.contact_copy }}</div>
        </div>
        <div class="footer-comma__column">
          {%- if section.settings.social_heading != blank -%}
            <h3 class="footer-comma__heading">{{ section.settings.social_heading }}</h3>
          {%- endif -%}
          <ul class="footer-comma__list">
            {%- for block in section.blocks -%}
              {%- if block.type == 'social_link' -%}
                <li class="footer-comma__item" {{ block.shopify_attributes }}>
                  <a
                    {% if block.settings.link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.link }}"
                    {% endif %}
                  >
                    {{ block.settings.label | escape }}
                  </a>
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        </div>
      </div>
    </div>
    <div class="footer-comma__bottom">
      <p class="footer-comma__legal">{{ section.settings.legal_text }}</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "COMMA – Footer",
  "tag": "section",
  "class": "section section--footer-comma",
  "settings": [
    { "type": "text", "id": "logo_text", "label": "Logo text", "default": "COMMA." },
    { "type": "textarea", "id": "brand_copy", "label": "Short brand copy", "default": "Progressive sounds from Oslo and beyond." },
    { "type": "text", "id": "nav_heading", "label": "Navigation heading", "default": "Navigate" },
    { "type": "text", "id": "contact_heading", "label": "Contact heading", "default": "Contact & booking" },
    { "type": "richtext", "id": "contact_copy", "label": "Contact copy", "default": "<p>Press / booking: email@example.com<\/p>" },
    { "type": "text", "id": "social_heading", "label": "Social heading", "default": "Follow" },
    { "type": "textarea", "id": "legal_text", "label": "Legal text", "default": "© COMMA.records. All rights reserved." },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 40 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 40 }
  ],
  "blocks": [
    {
      "type": "nav_link",
      "name": "Nav link",
      "settings": [
        { "type": "text", "id": "label", "label": "Label", "default": "Releases" },
        { "type": "url", "id": "link", "label": "Link URL" }
      ]
    },
    {
      "type": "social_link",
      "name": "Social link",
      "settings": [
        { "type": "text", "id": "label", "label": "Label", "default": "Instagram" },
        { "type": "url", "id": "link", "label": "Link URL" }
      ]
    }
  ],
  "presets": [
    {
      "name": "COMMA – Footer",
      "blocks": [
        { "type": "nav_link" },
        { "type": "nav_link" },
        { "type": "social_link" },
        { "type": "social_link" }
      ]
    }
  ]
}
{% endschema %}
