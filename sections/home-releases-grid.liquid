{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="home-releases-grid color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="home-releases-grid__inner page-width">
    <div class="home-releases-grid__header">
      {%- if section.settings.heading != blank -%}
        <h2 class="home-releases-grid__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.subheading != blank -%}
        <p class="home-releases-grid__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>
    <div class="home-releases-grid__grid">
      {%- for block in section.blocks -%}
        <article class="home-releases-grid__card" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <div class="home-releases-grid__image">
              {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            </div>
          {%- endif -%}
          <div class="home-releases-grid__content">
            {%- if block.settings.title != blank -%}
              <h3 class="home-releases-grid__title">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.artist != blank -%}
              <p class="home-releases-grid__artist">{{ block.settings.artist }}</p>
            {%- endif -%}
            {%- if block.settings.meta != blank -%}
              <p class="home-releases-grid__meta">{{ block.settings.meta }}</p>
            {%- endif -%}
            {%- if block.settings.price_label != blank -%}
              <p class="home-releases-grid__price">{{ block.settings.price_label }}</p>
            {%- endif -%}
          </div>
        </article>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "COMMA – Releases grid (manual)",
  "tag": "section",
  "class": "section section--home-releases-grid",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Releases" },
    { "type": "text", "id": "subheading", "label": "Subheading", "default": "Selected releases from the catalog" },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 40 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 40 }
  ],
  "blocks": [
    {
      "type": "release",
      "name": "Release card",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Artwork image" },
        { "type": "text", "id": "title", "label": "Release title", "default": "Release title" },
        { "type": "text", "id": "artist", "label": "Artist", "default": "Artist name" },
        { "type": "text", "id": "meta", "label": "Meta (format/year)", "default": "LP · 2025" },
        { "type": "text", "id": "price_label", "label": "Price label", "default": "$XX.XX" },
        { "type": "url", "id": "link", "label": "Release link" }
      ]
    }
  ],
  "presets": [
    {
      "name": "COMMA – Releases grid (manual)",
      "blocks": [
        { "type": "release" },
        { "type": "release" },
        { "type": "release" },
        { "type": "release" }
      ]
    }
  ]
}
{% endschema %}
