{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="home-events-list color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="home-events-list__inner page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="home-events-list__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    <div class="home-events-list__items">
      {%- for block in section.blocks -%}
        <article class="home-events-list__item" {{ block.shopify_attributes }}>
          <p class="home-events-list__date">{{ block.settings.date_label }}</p>
          <p class="home-events-list__title">{{ block.settings.title }}</p>
          <p class="home-events-list__location">{{ block.settings.location }}</p>
          {%- if block.settings.link_label != blank -%}
            <a
              {% if block.settings.link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ block.settings.link }}"
              {% endif %}
              class="home-events-list__link"
            >
              {{ block.settings.link_label | escape }}
            </a>
          {%- endif -%}
        </article>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "COMMA – Events list",
  "tag": "section",
  "class": "section section--home-events-list",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Events & shows" },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 40 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 40 }
  ],
  "blocks": [
    {
      "type": "event",
      "name": "Event row",
      "settings": [
        { "type": "text", "id": "date_label", "label": "Date label", "default": "01 Jan · City" },
        { "type": "text", "id": "title", "label": "Event title", "default": "Event title" },
        { "type": "text", "id": "location", "label": "Location", "default": "Venue" },
        { "type": "text", "id": "link_label", "label": "Link label", "default": "Tickets" },
        { "type": "url", "id": "link", "label": "Link URL" }
      ]
    }
  ],
  "presets": [
    {
      "name": "COMMA – Events list",
      "blocks": [
        { "type": "event" },
        { "type": "event" },
        { "type": "event" }
      ]
    }
  ]
}
{% endschema %}
