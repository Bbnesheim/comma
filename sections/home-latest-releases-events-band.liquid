{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="home-latest-releases-events-band color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="home-latest-releases-events-band__inner page-width">
    <div class="home-latest-releases-events-band__column home-latest-releases-events-band__column--releases">
      {%- if section.settings.releases_heading != blank -%}
        <h2 class="home-latest-releases-events-band__heading">{{ section.settings.releases_heading }}</h2>
      {%- endif -%}
      <div class="home-latest-releases-events-band__releases-grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'release' -%}
            <article class="home-latest-releases-events-band__release-card" {{ block.shopify_attributes }}>
              <div class="home-latest-releases-events-band__release-artwork"></div>
              <div class="home-latest-releases-events-band__release-meta">
                {%- if block.settings.title != blank -%}
                  <h3 class="home-latest-releases-events-band__release-title">{{ block.settings.title }}</h3>
                {%- endif -%}
                {%- if block.settings.artist != blank -%}
                  <p class="home-latest-releases-events-band__release-artist">{{ block.settings.artist }}</p>
                {%- endif -%}
              </div>
            </article>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
    <div class="home-latest-releases-events-band__column home-latest-releases-events-band__column--events">
      {%- if section.settings.events_heading != blank -%}
        <h2 class="home-latest-releases-events-band__heading">{{ section.settings.events_heading }}</h2>
      {%- endif -%}
      <div class="home-latest-releases-events-band__events-list">
        {%- for block in section.blocks -%}
          {%- if block.type == 'event' -%}
            <article class="home-latest-releases-events-band__event" {{ block.shopify_attributes }}>
              <p class="home-latest-releases-events-band__event-date">{{ block.settings.date_label }}</p>
              <p class="home-latest-releases-events-band__event-main">{{ block.settings.title }}</p>
              <p class="home-latest-releases-events-band__event-meta">{{ block.settings.location }}</p>
              {%- if block.settings.link_label != blank -%}
                <a
                  {% if block.settings.link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.link }}"
                  {% endif %}
                  class="home-latest-releases-events-band__event-link"
                >
                  {{ block.settings.link_label | escape }}
                </a>
              {%- endif -%}
            </article>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "COMMA – Latest releases + events band",
  "tag": "section",
  "class": "section section--home-latest-releases-events-band",
  "settings": [
    { "type": "text", "id": "releases_heading", "label": "Releases heading", "default": "Latest releases" },
    { "type": "text", "id": "events_heading", "label": "Events heading", "default": "Upcoming events" },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 40 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 40 }
  ],
  "blocks": [
    {
      "type": "release",
      "name": "Release card",
      "settings": [
        { "type": "text", "id": "title", "label": "Release title", "default": "Release title" },
        { "type": "text", "id": "artist", "label": "Artist", "default": "Artist name" }
      ]
    },
    {
      "type": "event",
      "name": "Event row",
      "settings": [
        { "type": "text", "id": "date_label", "label": "Date label", "default": "01 Jan · City" },
        { "type": "text", "id": "title", "label": "Event title", "default": "Event title" },
        { "type": "text", "id": "location", "label": "Location", "default": "Venue" },
        { "type": "text", "id": "link_label", "label": "Link label", "default": "Tickets" },
        { "type": "url", "id": "link", "label": "Link URL" }
      ]
    }
  ],
  "presets": [
    {
      "name": "COMMA – Latest releases + events band",
      "blocks": [
        { "type": "release" },
        { "type": "release" },
        { "type": "release" },
        { "type": "event" },
        { "type": "event" }
      ]
    }
  ]
}
{% endschema %}
