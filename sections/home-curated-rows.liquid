{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="home-curated-rows color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="home-curated-rows__inner page-width">
    {%- for block in section.blocks -%}
      <div class="home-curated-rows__row" {{ block.shopify_attributes }}>
        <div class="home-curated-rows__row-header">
          {%- if block.settings.heading != blank -%}
            <h2 class="home-curated-rows__row-heading">{{ block.settings.heading }}</h2>
          {%- endif -%}
          {%- if block.settings.subheading != blank -%}
            <p class="home-curated-rows__row-subheading">{{ block.settings.subheading }}</p>
          {%- endif -%}
        </div>
        <div class="home-curated-rows__row-track">
          {%- for i in (1..block.settings.card_count) -%}
            <div class="home-curated-rows__card">
              <div class="home-curated-rows__card-artwork"></div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</section>

{% schema %}
{
  "name": "COMMA – Curated product rows (wireframe)",
  "tag": "section",
  "class": "section section--home-curated-rows",
  "settings": [
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding top", "default": 40 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "label": "Padding bottom", "default": 40 }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Curated row",
      "settings": [
        { "type": "text", "id": "heading", "label": "Row heading", "default": "New releases" },
        { "type": "text", "id": "subheading", "label": "Row subheading", "default": "Short descriptor" },
        { "type": "range", "id": "card_count", "label": "Placeholder card count", "min": 1, "max": 8, "step": 1, "default": 4 }
      ]
    }
  ],
  "presets": [
    {
      "name": "COMMA – Curated product rows (wireframe)",
      "blocks": [
        { "type": "row" },
        { "type": "row" }
      ]
    }
  ]
}
{% endschema %}
